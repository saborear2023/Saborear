<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/submensagemsubcategoria_ponta"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/submensagemsubcategoria_campo"
        app:layout_constraintStart_toStartOf="@+id/submensagemsubcategoria_campo"
        app:srcCompat="@drawable/saborear_comentario_01"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/submensagemsubcategoria_campo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="-8dp"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/submensagemsubcategoria_listview"
        app:layout_constraintEnd_toEndOf="@+id/submensagemsubcategoria_listview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/submensagemsubcategoria_listview"
        app:layout_constraintTop_toTopOf="@+id/submensagemsubcategoria_texto"
        app:srcCompat="@drawable/saborear_comentario_02"
        tools:ignore="ImageContrastCheck" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/submensagemsubcategoria_listview"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submensagemsubcategoria_texto"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/submensagemsubcategoria_texto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:maxWidth="300dp"
        android:minWidth="100dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/submensagemsubcategoria_listview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
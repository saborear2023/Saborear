<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/subminimarket_campo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saborear_btn_comprar" />

    <TextView
        android:id="@+id/subminimarket_insert_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/alata"
        android:maxLines="1"
        android:scrollbars="none"
        android:textColor="#BF000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/subminimarket_campo"
        app:layout_constraintEnd_toStartOf="@+id/subminimarket_insert_preco"
        app:layout_constraintStart_toStartOf="@+id/subminimarket_campo"
        app:layout_constraintTop_toTopOf="@+id/subminimarket_campo" />

    <TextView
        android:id="@+id/subminimarket_insert_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:scrollbars="vertical"
        android:textColor="#BF000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/subminimarket_campo"
        app:layout_constraintEnd_toEndOf="@+id/subminimarket_campo"
        app:layout_constraintStart_toStartOf="@+id/subminimarket_campo"
        app:layout_constraintTop_toTopOf="@+id/subminimarket_campo" />

</androidx.constraintlayout.widget.ConstraintLayout>
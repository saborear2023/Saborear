<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/subminireceita_carregar"
        style="?android:attr/progressBarStyle"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:indeterminateTint="#000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/subminireceita_texto"
        app:layout_constraintEnd_toEndOf="@+id/subminireceita_imagem"
        app:layout_constraintStart_toStartOf="@+id/subminireceita_imagem"
        app:layout_constraintTop_toTopOf="@+id/subminireceita_imagem" />

    <ImageView
        android:id="@+id/subminireceita_imagem"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/subminireceita_texto"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/alata"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/subminireceita_imagem"
        app:layout_constraintStart_toStartOf="@+id/subminireceita_imagem"
        app:layout_constraintTop_toBottomOf="@+id/subminireceita_imagem"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subnotificacao_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/subnotificacao_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-16dp"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/subnotificacao_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saborear_campo_07"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/subnotificacao_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/subnotificacao_box"
        app:layout_constraintStart_toStartOf="@+id/subnotificacao_box"
        app:layout_constraintTop_toTopOf="@+id/subnotificacao_box"
        app:srcCompat="@drawable/saborear_icon_saborear"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/subnotificacao_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/subnotificacao_btn_deletar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/subnotificacao_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subnotificacao_texto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/alata"
        android:textColor="#626262"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/subnotificacao_box"
        app:layout_constraintStart_toEndOf="@+id/subnotificacao_icon"
        app:layout_constraintTop_toBottomOf="@+id/subnotificacao_titulo" />

    <TextView
        android:id="@+id/subnotificacao_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/alata"
        android:text="@string/clique_para_abrir"
        android:textColor="#929292"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/subnotificacao_box"
        app:layout_constraintTop_toBottomOf="@+id/subnotificacao_texto"
        tools:ignore="TextContrastCheck" />

    <ImageButton
        android:id="@+id/subnotificacao_btn_deletar"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="#00FFFFFF"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/subnotificacao_titulo"
        app:layout_constraintEnd_toEndOf="@+id/subnotificacao_box"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saborear_icon_delete"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
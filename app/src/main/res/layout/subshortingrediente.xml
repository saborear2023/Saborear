<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subshortingrediente_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/subshortingrediente_campo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        android:tint="#81F8F8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subingrediente_campo_02"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saborear_campo_08"
        tools:ignore="UnknownIdInLayout,UseAppTint" />

    <ImageView
        android:id="@+id/subshortingrediente_icon_lanche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/subshortingrediente_campo"
        app:layout_constraintStart_toStartOf="@+id/subshortingrediente_campo"
        app:layout_constraintTop_toTopOf="@+id/subshortingrediente_campo"
        app:srcCompat="@drawable/saborear_icon_lanche" />

    <ImageButton
        android:id="@+id/subshortingrediente_btn_remover"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/subshortingrediente_campo"
        app:layout_constraintEnd_toEndOf="@+id/subshortingrediente_campo"
        app:layout_constraintTop_toTopOf="@+id/subshortingrediente_campo"
        app:srcCompat="@drawable/saborear_icon_remover"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/subshortingrediente_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:importantForAccessibility="no"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/subshortingrediente_campo"
        app:layout_constraintEnd_toStartOf="@+id/subshortingrediente_btn_remover"
        app:layout_constraintTop_toTopOf="@+id/subshortingrediente_campo"
        app:srcCompat="@drawable/saborear_icon_add"
        tools:ignore="TouchTargetSizeCheck" />

    <Spinner
        android:id="@+id/subshortingrediente_ingrediente"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/subshortingrediente_icon_lanche"
        app:layout_constraintEnd_toStartOf="@+id/subshortingrediente_btn_add"
        app:layout_constraintStart_toEndOf="@+id/subshortingrediente_icon_lanche"
        app:layout_constraintTop_toTopOf="@+id/subshortingrediente_icon_lanche"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>
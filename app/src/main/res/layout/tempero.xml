<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:fillViewport="true"
    tools:ignore="SpeakableTextPresentCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tempero_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/tempero_btn_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:background="#00FFFFFF"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/saborear_voltar_tempero"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/tempero_btn_pesquisar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#00FFFFFF"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tempero_btn_perfil"
            app:layout_constraintStart_toEndOf="@+id/tempero_btn_home"
            app:srcCompat="@drawable/saborear_icon_lupa" />

        <ImageButton
            android:id="@+id/tempero_btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#00FFFFFF"
            android:importantForAccessibility="no"
            android:windowSoftInputMode="adjustPan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/saborear_icon_home" />

        <ImageButton
            android:id="@+id/tempero_btn_perfil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#00FFFFFF"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/saborear_icon_perfil" />

        <ImageButton
            android:id="@+id/tempero_btn_notificacao"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#00FFFFFF"
            android:importantForAccessibility="no"
            android:windowSoftInputMode="adjustPan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tempero_btn_back"
            app:layout_constraintStart_toEndOf="@+id/tempero_btn_perfil"
            app:srcCompat="@drawable/saborear_icon_notificacao" />

        <ImageButton
            android:id="@+id/tempero_btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#00FFFFFF"
            android:importantForAccessibility="no"
            android:windowSoftInputMode="adjustPan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/saborear_voltar" />

        <ImageView
            android:id="@+id/tempero_campo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:importantForAccessibility="no"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/tempero_listview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tempero_btn_voltar"
            app:srcCompat="@drawable/saborear_campo_12"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/tempero_imagem"
            android:layout_width="128dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/tempero_descricao"
            app:layout_constraintStart_toStartOf="@+id/tempero_campo"
            app:layout_constraintTop_toTopOf="@+id/tempero_titulo"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tempero_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:scrollbars="vertical"
            android:textColor="#BF000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tempero_campo"
            app:layout_constraintStart_toEndOf="@+id/tempero_imagem"
            app:layout_constraintTop_toBottomOf="@+id/tempero_btn_voltar" />

        <TextView
            android:id="@+id/tempero_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:justificationMode="inter_word"
            android:minLines="10"
            android:scrollbars="vertical"
            android:textColor="#BF000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/tempero_campo"
            app:layout_constraintStart_toEndOf="@+id/tempero_imagem"
            app:layout_constraintTop_toBottomOf="@+id/tempero_titulo" />

        <TextView
            android:id="@+id/tempero_texto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scrollbars="vertical"
            android:text="@string/esse_tempero_comumente_utilizado_em"
            android:textColor="#BF000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tempero_campo"
            app:layout_constraintStart_toStartOf="@+id/tempero_imagem"
            app:layout_constraintTop_toBottomOf="@+id/tempero_imagem" />

        <ListView
            android:id="@+id/tempero_listview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:cacheColorHint="#00FFFFFF"
            android:divider="#EBEBEB"
            android:dividerHeight="8dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/tempero_btn_editar"
            app:layout_constraintEnd_toEndOf="@+id/tempero_campo"
            app:layout_constraintStart_toStartOf="@+id/tempero_campo"
            app:layout_constraintTop_toBottomOf="@+id/tempero_texto"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/subutilizacao" />

        <ProgressBar
            android:id="@+id/tempero_carregar"
            style="?android:attr/progressBarStyle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:indeterminateTint="#000000"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tempero_imagem"
            app:layout_constraintEnd_toEndOf="@+id/tempero_imagem"
            app:layout_constraintStart_toStartOf="@+id/tempero_imagem"
            app:layout_constraintTop_toTopOf="@+id/tempero_imagem" />

        <ImageButton
            android:id="@+id/tempero_btn_deletar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#00FFFFFF"
            android:importantForAccessibility="no"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/tempero_btn_perfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/saborear_btn_delete"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/tempero_btn_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#00FFFFFF"
            android:importantForAccessibility="no"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/tempero_btn_pesquisar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/saborear_btn_editar_02"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>